# AI-Radio News Application - Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
BUILD_TARGET=development

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=airadio
POSTGRES_PASSWORD=airadio_dev_password
POSTGRES_DB=airadio
DATABASE_URL=postgresql://airadio:airadio_dev_password@localhost:5432/airadio

# ============================================
# Redis Configuration
# ============================================
REDIS_PASSWORD=airadio_redis_password
REDIS_URL=redis://:airadio_redis_password@localhost:6379

# ============================================
# Elasticsearch Configuration (Optional)
# ============================================
ELASTICSEARCH_URL=http://localhost:9200

# ============================================
# Authentication & Security
# ============================================
JWT_SECRET=change_this_to_a_secure_random_string_in_production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=10

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGIN=http://localhost:5173,http://localhost:8080

# ============================================
# News API Keys
# ============================================
# NewsAPI (newsapi.org)
NEWSAPI_KEY=your_newsapi_key_here

# GNews (gnews.io)
GNEWS_API_KEY=your_gnews_key_here

# Finnhub (finnhub.io)
FINNHUB_API_KEY=your_finnhub_key_here

# ============================================
# Market Data API Keys
# ============================================
# Alpha Vantage (alphavantage.co)
ALPHA_VANTAGE_KEY=your_alpha_vantage_key_here

# Yahoo Finance API Key (if using RapidAPI)
YAHOO_FINANCE_KEY=your_yahoo_finance_key_here

# Polygon.io (polygon.io)
POLYGON_API_KEY=your_polygon_key_here

# IEX Cloud (iexcloud.io)
IEX_CLOUD_TOKEN=your_iex_token_here

# ============================================
# AI/ML Service API Keys
# ============================================
# OpenAI (openai.com)
OPENAI_API_KEY=your_openai_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# ElevenLabs (elevenlabs.io)
ELEVENLABS_API_KEY=your_elevenlabs_key_here
ELEVENLABS_VOICE_ID=your_preferred_voice_id

# Anthropic Claude (optional, anthropic.com)
ANTHROPIC_API_KEY=your_anthropic_key_here

# ============================================
# Frontend Configuration
# ============================================
VITE_API_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3000

# ============================================
# Monitoring & Logging
# ============================================
LOG_LEVEL=debug

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Sentry (optional, sentry.io)
SENTRY_DSN=your_sentry_dsn_here

# ============================================
# Email Configuration (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@airadio.com

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Caching Configuration
# ============================================
CACHE_TTL_ARTICLES=300
CACHE_TTL_MARKET_DATA=60
CACHE_TTL_USER_SESSIONS=86400

# ============================================
# Job Scheduling
# ============================================
NEWS_FETCH_INTERVAL=300000
MARKET_UPDATE_INTERVAL=60000

# ============================================
# Feature Flags
# ============================================
ENABLE_ELASTICSEARCH=false
ENABLE_AUDIO_PLAYBACK=true
ENABLE_PERSONALIZATION=true
ENABLE_PUSH_NOTIFICATIONS=false

# ============================================
# AWS Configuration (if using AWS services)
# ============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=airadio-assets

# ============================================
# Payment Processing (Optional)
# ============================================
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
